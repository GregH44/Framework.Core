@model UserViewModel

@{
    ViewBag.Title = $"Suppression de l'utilisateur {Model.FirstName} {Model.LastName}";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <form asp-area="UserManager" asp-controller="User" asp-action="Delete" method="post" class="form-horizontal" role="form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="col-md-12">
                <span>Êtes-vous sûr de vouloir supprimer l'utilisateur @Model.FirstName @Model.LastName ?</span>&nbsp;<button type="submit" class="btn btn-default btn-xs">Supprimer</button>
            </div>
        </div>
    </form>
</div>